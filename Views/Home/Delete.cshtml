@model StaffBase.Models.Employee
@{
    ViewData["Title"] = "Удаление сотрудника";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.Name
        </dd>

        <dt>Возраст</dt>
        <dd>
            @Model.Surname
        </dd>
        <dt>Телефон</dt>
        <dd>
            @Model.Phone
        </dd>
        <dd>
            @Model.CompanyId
        </dd>
        <dd>
            @Model.Passport.Type
        </dd>
        <dd>
            @Model.Passport.Number
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>